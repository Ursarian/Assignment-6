<div class="row">
    <div class="col-md-12">
        <a href="/courses/add" class="btn btn-success float-right">Add New Course</a>
        <br>
        <h2>{{header}}</h2>
        <hr />
        {{#if courses}}
            <table border='1'>
                <tr>
                    <th>Course Code</th>
                    <th>Course Description</th>
                    <th></th>
                </tr>
                {{#each courses}}
                    <tr>
                        <td><a href="/course/{{courseId}}">{{courseCode}}</a></td>
                        <td><a href="/students?course={{courseId}}">{{courseDescription}}</a></td>
                        <td><a class="btn btn-danger" href="/courses/delete/{{courseId}}">Remove</a></td>
                    </tr>
                {{else}}
                    <tr>
                        <td colspan="3">No Data Available</td>
                    </tr>
                {{/each}}
            </table>
        {{/if}}
        {{#unless students}}
            <div class="col-md-12 text-center">
                <strong>{{message}}</strong>
            </div>
        {{/unless}}
    </div>
</div>