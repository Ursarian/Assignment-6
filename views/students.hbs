<div class="row">
    <div class="col-md-12">
        <a href="/students/add" class="btn btn-success float-right">Add New Student</a>
        <br>
        <h2>{{header}}</h2>
        <hr />
        {{#if students}}
            <table border='1'>
                <tr>
                    <th>Student Num</th>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Address</th>
                    <th>Status</th>
                    <th>Course ID</th>
                    <th></th>
                </tr>
                    {{#each students}}
                        <tr>
                            <td>{{studentNum}}</td>
                            <td><a href="/student/{{studentNum}}">{{firstName}} {{lastName}}</a></td>
                            <td><a href="mailto:{{email}}">{{email}}</a></td>
                            <td>{{addressStreet}}, {{addressCity}}, {{addressProvince}}</td>
                            <td>{{status}}</td>
                            <td><a href="/students?course={{course}}">{{course}}</a></td>
                            <td><a class="btn btn-danger" href="/students/delete/{{studentNum}}">Remove</a></td>
                        </tr>
                    {{/each}}
            </table>
        {{/if}}
        {{#unless students}}
            <div class="col-md-12 text-center">
                <strong>{{message}}</strong>
            </div>
        {{/unless}}
    </div>
</div>
